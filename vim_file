 
call plug#begin()

Plug 'itchyny/lightline.vim'
Plug 'tmhedberg/SimpylFold'

call plug#end()

set laststatus=2

"Dont act like vi 
set nocompatible

" gives color to syntax 
syntax enable 
set backspace=indent,eol,start
filetype plugin indent on 

" Seaching files 
" can recursivley look down subfolders for file 
set path+=**

" lets tab auto-complete on finding files 
set wildmenu 

" line numbers 
set number  
set ruler 

" show match brackets 
set showmatch

" split 
set splitbelow
set splitright

"split navigations
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Enable folding 
set foldmethod=indent
set foldlevel=99

"Enabnling folding with the spacebar 
nnoremap <space> za


" tab 
set expandtab
set smarttab 
set shiftwidth=4 
set tabstop=4
 
" no backup files or swap files 
set nobackup
set nowritebackup
set noswapfile

" make search case insenstive 
set hlsearch 
set incsearch 
set ignorecase 
set smartcase 
" Tag jumping 
command! MakeTags !ctages -R 

 
call plug#begin()

Plug 'preservim/nerdtree'
Plug 'ryanoasis/vim-devicons'
Plug 'ajh17/VimCompletesMe'
Plug 'itchyny/lightline.vim'
Plug 'tmhedberg/SimpylFold'
Plug 'majutsushi/tagbar'

call plug#end()

set laststatus=2

"Dont act like vi 
set nocompatible

" gives color to syntax 
syntax enable 
set backspace=indent,eol,start
filetype plugin indent on 

" Seaching files 
" can recursivley look down subfolders for file 
set path+=**

" lets tab auto-complete on finding files 
set wildmenu 

" line numbers 
set number  
set ruler 

" show match brackets 
set showmatch

" split 
set splitbelow
set splitright

"split navigations
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" Enable folding 
set foldmethod=indent
set foldlevel=99

"Enabnling folding with the spacebar 
nnoremap <space> za


" tab 
set expandtab
set smarttab 
set shiftwidth=4 
set tabstop=4

" opens nerdTree 
map <C-n> :NERDTreeToggle<CR>
" no backup files or swap files 
set nobackup
set nowritebackup
set noswapfile

" make search case insenstive 
set hlsearch 
set incsearch 
set ignorecase 
set smartcase 

